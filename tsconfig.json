{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Cambia esto a "react"
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@nano": [
        "src/components/nano/index.tsx"
      ],
      "@fn/*": [
        "./src/functions/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@assembled/*": [
        "./src/assembled/*"
      ],
      "@form": [
        "./src/components/form/index.tsx"
      ],
      "@fn": [
        "./src/functions/index.ts"
      ]
    },
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
