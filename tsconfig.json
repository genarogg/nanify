{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // Globales
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@nano": ["./src/components/nano/index.tsx"],
      "@fn": ["src/functions/index.ts"],
      "@env": ["./env.ts"]

      // components varios
     
    },
    "jsx": "react-jsx",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.combined.tsbuildinfo"
  },
  "include": [
    "src",
    "vite.config.ts",
    "src/types/declarations.d.ts"
   ]
}